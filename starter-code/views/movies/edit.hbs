<h2>Edit your Movie!</h2>
<form action="/movies/edit?movie_id={{movie._id}}" method="POST">
  <label for="title">Title</label><input name="title" type="text" value="{{movie.title}}">
  <label for="genre">Genre</label><input name="genre" type="text" value="{{movie.genre}}">
  <label for="plot">Plot</label><input name="plot" type="text" value="{{movie.plot}}">
  <button>Submit</button>
</form>
